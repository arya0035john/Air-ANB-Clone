<% layout('layouts/boilerplate') %>
<body>
  <div class="row mt-3"></div>
  <div class="col-8 offset-2">
    <form
      method="post"
      action="/listing/<%= list._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <h3 id="createHead">Update Listing</h3>
      <div class="mb-3">
        <label for="title" class="form-label">Title : </label>
        <input
          id="title"
          name="listing[title]"
          class="form-control"
          value="<%= list.title %>"
          type="text"
          required
        />
        <div class="invalid-feedback">Please enter title</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description : </label>
        <textarea
          id="description"
          name="listing[description]"
          type="text"
          class="form-control"
          required
        >
<%= list.description %></textarea
        >
        <div class="invalid-feedback">Please enter description</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image : </label>
        <p>Original Image</p>
        <img id="updateImg" src="<%= originalImageUrl %>">
        <input
          id="image"
          name="image"
          type="file"
          class="form-control mt-3"
        />
        <div class="invalid-feedback">Please enter URL of the image</div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price : </label>
        <input
          id="price"
          name="listing[price]"
          type="number"
          class="form-control"
          value="<%= list.price %>"
          required
        />
        <div class="invalid-feedback">Please enter price</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location : </label>
        <input
          id="location"
          name="listing[location]"
          type="text"
          value="<%= list.location %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter location</div>
      </div>
      <div class="mb-3">
        <label for="country" class="form-label">Country : </label>
        <input
          id="country"
          name="listing[country]"
          type="text"
          class="form-control"
          value="<%= list.country %>"
          
        />
        <div class="invalid-feedback">Please enter country</div>
      </div>
      <button
        class="btn btn-dark"
        style="background-color: tomato; border: none"
      >
        Edit
      </button>
    </form>
  </div>
</body>
