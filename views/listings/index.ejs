<% layout('layouts/boilerplate') %> 

<body>
  <br />
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2" style="position: relative;">
    <% for(let i=0;i< allListing.length; i++){ %>
    <a href="/listing/<%= allListing[i]._id %>" class="listing_link">
      <div class="card col" style="width: 24rem">
        <img
          src="<%= allListing[i].image.url %>"
          class="card-img-top"
          alt="..."
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= allListing[i].title %></b>
            <br />
            &#8377; <%= (allListing[i].price).toLocaleString("en-IN") %> / night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
